{
  "name": "mini-connector",
  "version": "1.0.0",
  "description": "VanSales Mini Connector - On-premise agent for ERP integration",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "tsc -p tsconfig.main.json && electron . --inspect",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "connector",
    "vansales",
    "erp",
    "integration"
  ],
  "author": "360Solve",
  "license": "MIT",
  "dependencies": {
    "crypto": "^1.0.1",
    "axios": "^1.6.7",
    "electron-store": "^8.1.0",
    "machine-id": "^1.0.0",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "build": {
    "appId": "com.vansales.miniconnector",
    "productName": "VanSales Mini Connector",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
